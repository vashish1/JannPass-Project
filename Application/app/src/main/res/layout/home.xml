<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:id="@+id/swipe"
     android:layout_height="match_parent"   >



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/img" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="50dp"
                     android:text="Corona Live Updates"
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:textColor="#000000"
                     android:textSize="20dp"
                     android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/internet"
                android:layout_height="wrap_content"
                android:text="NO INTERNET..SWIPE TO REFRESH!"
                android:textColor="#000000"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="324dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="177dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <android.support.design.card.MaterialCardView
                        android:id="@+id/card1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:onClick="c1"

                        android:visibility="invisible"
                        app:cardBackgroundColor="#cc99ff"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/active" />

                            <TextView
                                android:id="@+id/active"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="12630"
                                android:textColor="#EE2737"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ACTIVE CASES"
                                android:textColor="#EE2737"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.design.card.MaterialCardView>


                    <android.support.design.card.MaterialCardView
                        android:id="@+id/card2"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:onClick="c2"
                        android:visibility="invisible"
                        app:cardBackgroundColor="#ffe680"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/cured" />

                            <TextView
                                android:id="@+id/discharge"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="12630"
                                android:textColor="#EE2737"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="CURED"
                                android:textColor="#EE2737"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.design.card.MaterialCardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <android.support.design.card.MaterialCardView
                        android:id="@+id/card3"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:onClick="c3"
                        android:visibility="invisible"
                        app:cardBackgroundColor="#70db70"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/death" />

                            <TextView
                                android:id="@+id/death"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="12630"
                                android:textColor="#EE2737"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="DEATH"
                                android:textColor="#EE2737"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.design.card.MaterialCardView>


                    <android.support.design.card.MaterialCardView
                        android:id="@+id/card4"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        android:onClick="c4"
                        android:visibility="invisible"
                        app:cardBackgroundColor="#8080ff"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/passengers" />

                            <TextView
                                android:id="@+id/passenger"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="12630"
                                android:textColor="#EE2737"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="MIGRATED"
                                android:textColor="#EE2737"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.design.card.MaterialCardView>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/basic"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textColor="#EE2737"
                android:textSize="15dp"
                android:text="SOURCE- https://www.mygov.in/covid-19/"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>